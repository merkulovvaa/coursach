<h1>Finishing appointment</h1>

<%= form_for(@appointment) do |f| %>
  <div>
    <%= f.label :report %>
    <%= f.text_area :report %>
  </div>

  <div class="actions">
    <%= f.submit "Finish Appointment" %>
  </div>

  <div class="actions">
    <%= f.submit "Cancel Appointment" %>
  </div>
<% end %>

<div>
  <%= link_to "Show this appointment", @appointment %> |
  <%= link_to "Back to home page", doctor_root_path %>
</div>
