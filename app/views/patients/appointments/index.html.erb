<p style="color: green"><%= notice %></p>

<h1>Appointments</h1>

<div id="appointments">
  <% @appointments.each do |appointment| %>
    <%= render appointment %>
    <p>
      <%= link_to "Show this appointment", controller: "patients/appointments", action: "show", id: appointment.id %>
    </p>
  <% end %>
</div>

