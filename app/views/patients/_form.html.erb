<div class="container gap-container">
  <%= form_with(model: patient, class: "my-form") do |form| %>
    <% if patient.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

        <ul>
          <% patient.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-2">
      <%= form.label :full_name, class: "form-label" %>
      <%= form.text_field :full_name, class: "form-control" %>
    </div>

    <div class="mb-2">
      <%= form.label :gender_id, "Gender", class: "form-label" %>
      <%= form.collection_select :gender_id, Gender.all, :id, :name_gender, { prompt: "Select gender" }, class: "form-control" %>
    </div>

    <div class="mb-2">
      <%= form.label :birth_date, class: "form-label" %>
      <%= form.date_field :birth_date, class: "form-control" %>
    </div>

    <div class="mb-2">
      <%= form.label :address, class: "form-label" %>
      <%= form.text_field :address, class: "form-control" %>
    </div>

    <div class="mb-2">
      <%= form.label :phone_number, class: "form-label" %>
      <%= form.text_field :phone_number, class: "form-control" %>
    </div>

    <div class="mb-2">
      <%= form.label :email, class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="mb-2">
      <%= form.submit "Save", class: "btn btn-monkey", style: "background-color: #7eaa57; border-radius: 8px;"%>
    </div>
  <% end %>
</div>
